{
  "name": "hollow-duel",
  "version": "2.0.0",
  "description": "A 3D souls-like multiplayer combat game built with Three.js and Firebase.",
  "main": "game.js",
  "scripts": {
    "start": "npx http-server . -o",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [ "**/*.test.js" ]
  },
  "keywords": [
    "threejs",
    "game",
    "multiplayer",
    "souls-like",
    "webgl",
    "web-audio"
  ],
  "author": "Rowan Vale",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0"
  }
}